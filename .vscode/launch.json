    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GhostCom (MinGW64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ghostcom.exe",
            "args": ["--server", "127.0.0.1", "--port", "8080", "--message", "Test"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for g++ STL containers",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false
                }
            ]
        }
    ]
}